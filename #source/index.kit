                    <label class="contact-us__label-name" for="name"></label>
                    <input class="contact-us__name" id="name" name="name" type="text" placeholder="Name*" required>
                    <label class="contact-us__label-subject" for="subject"></label>
                    <input class="contact-us__subject" id="subject" name ="subject" type="text" placeholder="Subject*" required>
                    <label class="contact-us__label-email" for="email"></label>
                    <input class="contact-us__email" id="email" name="email" type="email" placeholder="E-mail*" required>
                    <label class="contact-us__label-message" for="message"></label>
                    <textarea class="contact-us__message" id="message" name="message" placeholder="Message*" required></textarea>
                    <input class="contact-us__submit" type="submit" value="Send Message">
                </form>
                <div class="contact-us__information">
